# Method to check service status
check_service_status() {
  echo "
++---------------------System Services Report ---------------------++

  "
  
#!/bin/bash

echo "Checking status of services..."

services=("apache2" "mysql" "nginx" "postgresql")  # List of services to check

for service in "${services[@]}"; do               # Iterate through the services list
  status=$(systemctl is-active "$service")         # Get the service's status

  echo "$service Status: $status"                 # Print the status

  if [ "$status" == "active" ]; then               # Check if active
    echo "$service is running!"
  else
    echo "$service is not running.."
  fi

  echo  # Add a blank line for better readability
done



  echo "
  
  ++--------------------------------------------------------------++

  "
} 